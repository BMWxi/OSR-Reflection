

function TReflectionWidget.Get(Index, ChildIndex: Integer): Integer;
begin
  Result := Reflect.Smart.Get2DObject(0, Client_Widgets, Index, ChildIndex);
end;

function TReflectionWidget.GetText(WidgetPointer: Integer): string;
var
  Text: Integer;
begin
  Text := Reflect.Smart.GetObject(WidgetPointer, Widget_GetText);
  Result := Trim(Reflect.Internals.GetJavaString(Text, 1024));
  Reflect.Smart.FreeObject(Text);
end;


